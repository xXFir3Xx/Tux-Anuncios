.empresas
	padding 0.5em
	.empresa
		border-radius 5px 5px 0 0
		background white
		box-shadow 2px 2px 10px rgba(black,0.3)
		.empresa-cabecera
			border-radius 5px 5px 0 0
			background amarillo-f
			text-align center
			padding 0.5em 0
			img
				width 70px
				border-radius 50%
				border 4px solid rgba(white,0.3)
			h3
				color white
				margin 0
