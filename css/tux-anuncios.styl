@import 'nib'
@import 'nib/vendor'

@font-face {
	font-family: 'iconos';
	src:url('../fonts/icomoon.eot?7nwjnf');
	src:url('../fonts/icomoon.eot?#iefix7nwjnf') format('embedded-opentype'),
		url('../fonts/icomoon.woff?7nwjnf') format('woff'),
		url('../fonts/icomoon.ttf?7nwjnf') format('truetype'),
		url('../fonts/icomoon.svg?7nwjnf#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}
// Prefijos propietarios
vendor-prefixes = o ms moz webkit official
/* Patron de colores App Tux-Anuncios */
verde-c = #1ABC9C
verde-f = #16A085
limon-c = #2ECC71
limon-f = #27AE60
azul-c = #3498DB
azul-f = #2980B9
morado-c = #9B59B6
morado-f = #8E44AD
acero-c = #34495E
acero-f = #2C3E50
amarillo-c = #F1C40F 
amarillo-f = #F39C12
naranja-c = #E67E22
naranja-f = #D35400
rojo-c = #E74C3C
rojo-f = #C0392B
gris-c = #ECF0F1
gris-f = #BDC3C7
concreto-c = #95A5A6
concreto-f = #7F8C8D
rosa = #CC6699
rosa-fuerte = #CC3366
celeste = #37cde7


html,body
	height 100%


body
	background white
	font-family Arial
	font-size 16px


	#wrap 
		min-height 100%

	#main 
		overflow auto
		padding-bottom 50px
		
		.anuncio-clasificado
			// display none
			padding 0.5em
			background-color rojo-f
			overflow hidden
			text-align center
			position relative
			border-bottom 3px solid rgba(255,255,255,0.3)
			.logo-clasificado
				width 60px
				margin 0
				padding 0
				img
					width 50px
					border-radius 50%
					border 4px solid rgba(255,255,255,0.3)

			.descripcion-clasificado
				margin 0 20px 0 70px
				padding 0.5em 0
				width 60%
				p
					color white
					font-size 12px
					font-weight normal
					text-align justify
					margin 0
					padding 0
			.boton-ir
				background-color rojo-c
				width 50px
				height 100%
				position absolute
				top 0
				right 0
				a
					position absolute
					top 35%
					left 10px
					&:before
						font-family iconos
						font-size 2em
						content "\e625"
		.buscador
			background azul-c
			text-align center
			padding 1em
			img
				width 150px
			input[type="search"]
				border 0
				border-radius 8px
				padding 0.5em 1em
				margin 0.5em 0
				transition margin 2s linear 1s
				&:focus
					padding 0.5em 1.5em
			.text-buscador
				a
					&:before
						font-family iconos
						font-size 1em
						content "\e609"
		.login
			background azul-f
			text-align center
			padding-top 1em
			.inp-login
				display block
				
				
					
				
	#footer 
		position relative 
		margin-top -50px /* altura en px del footer con valor negativo */ 
		height: 50px; /* Altura del Footer en px*/ 
		clear both 
		background verde-f 
		text-align center
		color white
header
	background verde-c
	border-bottom solid 5px rgba(0,0,0,0.3)
	color white
	padding 0.5em
	.logo
		display inline-block
		margin 0 0.5em
		img
			height 50px
	.cont-menu
		float right
		padding 1em
a
	color white
	text-decoration none
	transition border .25s

a:hover,
a:focus
	color white
	text-decoration none

.btn
	border none
	border-radius 4px
	padding 10px 20px
	font-size 15px
	font-weight bold
	line-height 1.4
	transition border .25s linear, color .25s linear, background-color .25s linear
	&:hover,
	&:focus
		outline none
		color white
